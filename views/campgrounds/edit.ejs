<% include ../partials/header %>

<div class="container ">
	
		<h1 style="text-align: center">Edit <%=camp.name%></h1>
		<div class="row">
		<div style="width: 30%; margin: 20px auto;">
			<form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<label>Name</label>
					<input class="form-control" type="text" name="campground[name]" value="<%=camp.name%>">
				</div>
				<div class="form-group">
					<label>Price</label>
					<input class="form-control" type="number" name="campground[price]" value="<%=camp.price%>" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<label>Image url</label>
					<input class="form-control" type="text" name="campground[image]" value="<%=camp.image%>">
				</div>
				<div class="form-group">
					<label>Description</label>
					<input class="form-control" type="text" name="campground[description]" value="<%=camp.description%>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-block btn-primary">Edit</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>
</div>
<% include ../partials/footer %>