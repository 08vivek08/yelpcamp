<% include ../partials/header %>
<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome To YelpCamp!!</h1>
			<p>View our hand-picked campgrounds from all over the world</p>
			<a href="/campgrounds/new" class="btn btn-primary btn-lg">Add New Campground</a>
		</div>
	</header>
	
	<div class="row">
		<% campgrounds.forEach(function(camp){%>
			<div class="col-lg-4 col-md-6 col-sm-12">
				<div class="card text-center mb-4">
					<img src="<%=camp.image%>" class="card-img-top">
					<div class="card-body">
						<h5 class="card-title"><strong><%=camp.name%></strong></h5>
						<a href="/campgrounds/<%=camp._id%>" class="btn btn-primary btn-sm">More Info</a>
					</div>
				</div>
			</div>
		<%}) %>
	</div>
</div>
<% include ../partials/footer %>